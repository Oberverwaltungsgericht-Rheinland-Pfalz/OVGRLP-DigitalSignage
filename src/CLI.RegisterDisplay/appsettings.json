{
  "Services": {
    "Displays": "https://localhost:7266/v1/display",
    "Register": "https://localhost:7014/v1/register"
  },
  "Registry": {
    "DigitalSignage": {
      "Device": {
        "Path": "HKEY_LOCAL_MACHINE\\SOFTWARE\\OVGRLP\\DigitalSignage",
        "Value": "DeviceId"
      }
    },
    "Autostart": {
      "Path": "HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Run",
      "Value": "DigitalSignage"
    }
  },
  "Kiosk": {
    "HideDesktopIcons": true,
    "HideTaskbar": true,
    "BlackBackground": true,
    "AutoLogin": {
      "User": "LocalUser",
      "Domain": "",
      "Password": ""
    }
  },
  "Options": {
    "ClientPath": "C:\\temp\\ovgrlp\\digitalsignage",
    "ClientPort": 9000
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\temp\\ovgrlp\\digitalsignage\\cli.register.log.json",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  }
}
