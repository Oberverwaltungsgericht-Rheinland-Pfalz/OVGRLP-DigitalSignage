{
  "DeveloperMode": true,
  "AllowedHosts": "*",
  "Services": {
    "Displays": "https://localhost:7266/v1/display",
    "Events": "https://localhost:7266/v1/event",
    "ClientVersions": "https://localhost:7266/v1/clientversion"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\temp\\ovgrlp\\digitalsignage\\services.display.log.json",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  }
}
